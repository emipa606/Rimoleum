  <RecipeDef Name="RimoleumRecipeBase" Abtract="true">
    <defName>RimoleumTileRcp</defName>
    <jobString>Making Rimoleum Tiles.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1000</workAmount>
    <targetCountAdjustment>50</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Synthread</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Chemfuel</li>
        <li>Synthread</li>
      </thingDefs>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>BiofuelRefinery</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>7</Intellectual>
    </skillRequirements>
    <researchPrerequisite>Rimoleum</researchPrerequisite>
  </RecipeDef>
